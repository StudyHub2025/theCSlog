import java.io.BufferedReader;
import java.io.IOException;
import java.io.InputStreamReader;
import java.util.Arrays;
import java.util.HashMap;
import java.util.Map;

public class baek29723 {
    public static void main(String[] args) throws IOException {
            BufferedReader br = new BufferedReader(new InputStreamReader(System.in));

            Map<String, Integer> map = new HashMap<>();
            int result = 0;
            int min = 0;
            int max = 0;
            String count = br.readLine();

            int[] list = Arrays.stream(count.split(" ")).mapToInt(Integer::parseInt).toArray();
            int total = list[0];
            int need = list[1];
            int provided = list[2];

            for (int i = 0; i < total; i++) {
                String[] str = br.readLine().split(" ");
                map.put(str[0], Integer.parseInt(str[1]));
            }
            for (int i = 0; i < provided; i++) {
                String choice = br.readLine();
                result += map.get(choice);
                map.remove(choice);
            }

            int [] lists = map.values().stream().mapToInt(i->i).toArray();
            Arrays.sort(lists);
            for (int i = 0; i < need-provided; i++) {
                min +=  lists[i];
                max += lists[(total-1)-i-provided];
            }
            min += result;
            max += result;

            System.out.printf("%d %d\n", min, max);
            br.close();
    }
}